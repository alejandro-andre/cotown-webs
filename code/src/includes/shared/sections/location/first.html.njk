<section class="first-contain">   
  <div id="video" class="video-loc">
    <div class="text-container">
      <div class="description text">        
        {{location.Texts[0] | translate('Details', L) | markdown | safe }}
      </div>
      {% if site == 'vanguard' %}
        <div class="head2">{{location | translate('Name', L)}}</div>
      {% else %}
      {% endif %}     
    </div>
    <!--
    <div class="opacity"></div> 
    -->
    <div>
      {% for i in location.Images | find('Image_type', 'eq', 'landing') %}
      {% if loop.index == 1 %}
      {% image
        constants.SERVER + "/wopi/files/Marketing/Media_location/" + i.id +"/Image/contents?access_token=" + token,
        L, location.Name, location.Name, location.Name + '-' + i.id | slugify, "video",
        [1600], ""
      %}
      {% endif %}
      {% endfor %}
    </div>
  </div>
</section>