<footer>

<section class="container-footer">

  <div class="contain pure-g">

      <!-- Logo e info -->
      <div class="left pure-u-2-5">
        {% include site + '/sections/common/footer-logo.html.njk' %}
        <div class="footer-info mobile">
          <div class="info">
            {% for o in offices %}
            {% if loop.index == 1 %}
            <p>{{o.Address}}</p>
            <p>{{o.Phones}}</p>
            <p>{{o.Email}}</p>
            {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>

      <div class="right pure-u-3-5">

        <!-- Links desktop -->
        <div class="footer-contain pure-g ">
          <div class="pure-u-1-3">
            <ul>
              <li class="bold"><a href="{{langs[L].pages['rooms'].url}}.html">{{langs[L].pages['rooms'].title}}</a></li>
              <li class="bold"><a href="{{langs[L].pages['about'].url}}.html">{{langs[L].pages['about'].title}}</a></li>
              <li class="bold"><a href="{{langs[L].pages['advantages'].url}}.html">{{langs[L].pages['advantages'].title}}</a></li>
            </ul>
          </div>
          <div class="pure-u-1-3">
            <ul>
              <li class="bold"><a href="{{langs[L].pages['faqs'].url}}.html">{{langs[L].pages['faqs'].title}}</a></li>
              <li class="bold"><a href="{{langs[L].pages['blog'].url}}.html">{{langs[L].pages['blog'].title}}</a></li>
              <li class="bold"><a href="{{langs[L].pages['contact'].url}}.html">{{langs[L].pages['contact'].title}}</a></li>
            </ul>
          </div>
          <div class="pure-u-1-3">
            <ul>
              <li><a href="{{langs[L].pages['privacy'].url}}.html">{{langs[L].pages['privacy'].title}}</a></li>
              <li><a href="{{langs[L].pages['legal'].url}}.html">{{langs[L].pages['legal'].title}}</a></li>
              <li><a href="{{langs[L].pages['datasecurity'].url}}.html">{{langs[L].pages['datasecurity'].title}}</a></li>
            </ul>
          </div>
        </div>

        <!-- Redes sociales movil -->
        <div class="redes-mobile pure-u-1">
          {% for r in rrss %}
          <a href="{{r.Link}}" rel="noopener, noreferrer" target="_blank"><em class="icon-{{r.Name}}"></em></a>
          {% endfor %}
        </div>

        <!-- Links movil -->
        <div class="mobile-listado">
          <ul>
            <li class="bold"><a href="{{langs[L].pages['rooms'].url}}.html">{{langs[L].pages['rooms'].title}}</a></li><span class="sep">| </span>
            <li class="bold"><a href="{{langs[L].pages['advantages'].url}}.html">{{langs[L].pages['advantages'].title}}</a></li><span class="sep"> | </span>
            <li class="bold"><a href="{{langs[L].pages['about'].url}}.html">{{langs[L].pages['about'].title}}</a></li><span class="sep"> | </span>
            <li class="bold"><a href="{{langs[L].pages['faqs'].url}}.html">{{langs[L].pages['faqs'].title}}</a></li><span class="sep"> | </span>
            <li class="bold"><a href="{{langs[L].pages['contact '].url}}.html">{{langs[L].pages['contact'].title}}</a></li><span class="sep"> | </span>
            <li><a href="{{langs[L].pages['privacy'].url}}.html">{{langs[L].pages['privacy'].title}}</a></li><span class="sep"> | </span>
            <li><a href="{{langs[L].pages['legal'].url}}.html">{{langs[L].pages['legal'].title}}</a></li><span class="sep"> | </span>
            <li><a href="{{langs[L].pages['datasecurity'].url}}.html">{{langs[L].pages['datasecurity'].title}}</a></li>
          </ul>
        </div>

      </div>

  </div>

  <div class="footer-info desktop pure-g">

    <!-- Redes sociales -->
    <div class="redes pure-u-2-5">
      {% for r in rrss %}
      <a href="{{r.Link}}" rel="noopener, noreferrer" target="_blank"><em class="icon-{{r.Name}}"></em></a>
      {% endfor %}
    </div>

    <!-- Headquarters -->
    <div class="info-desktop pure-u-3-5">
      {% for o in offices %}
      {% if loop.index == 1 %}
      <p>{{o.Phone}}</p>
      <p>{{o.Email}}</p>
      <p>{{o.Address}}</p>
      {% endif %}
      {% endfor %}
    </div>

  </div>

</section>

</footer>

