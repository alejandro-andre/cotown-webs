<section
{% if site == 'vanguard' %} 
      class="opinions"
      {% else %}
      class="opinions cotown"
      {% endif %}
>

  <div class="text-container">
      {% literal texts, 'home-testimonios-titulo', L, true %}
  </div>

  <div class="carousel splide splide-opinions" role="group">
    <div class="splide__track">
      <ul class="splide__list">
        {% for t in testimonials %}
        <li class="splide__slide">
          <div class="slide">
            <div class="avatar">
              {% image
                constants.SERVER + "/wopi/files/Marketing/Testimonials/" + t.id +"/Image/contents?access_token=" + token,
                t.Name, t.Name + '-' + t.id | slugify, "",
                [200], ""
              %}
            </div>
            <div class="opinion">
              <div class="title-info">
                <p class="name bold">{{t.Name}}</p>
                <p class="date">{{t.Date}}</p>
              </div>
            <h3 {% if site == 'vanguard' %} 
              class="comillas"
              {% else %}
              class="comillas cotown"
              {% endif %}>â€œ</h3>
            <ul {% if site == 'vanguard' %} 
              class="stars"
              {% else %}
              class="stars cotown"
              {% endif %}>
              {% for i in range(0, t.Stars) %}
              <li class="star"><em class="icon-star"></em></li>
              {% endfor %}
              {% for i in range(t.Stars, 5) %}
              <li class="star"><em class="icon-star no-active"></em></li>
              {% endfor %}
            </ul>
            </div>           
            {% if site == 'vanguard' %}
              <p class="text">{{t | translate ('Text', L)}}</p>
            {% else %}
               <p class="text">{{t | translate ('Text', L)}}</p>
               <div class="mini-border"></div>
            {% endif %}
          </div>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>

</section>