<section class="iconos-chat">
  <div class="spoty"><em class="icon-spoty"></em></div>
  <div class="chat"><em class="icon-chat"></em></div>
</section>

<script>
  new Splide('.splide-partners', {
    type: 'loop',
    fixedWidth: '240px',
    focus: 0,
    perMove: 1,
    drag: 'free',
    arrows: false,
    pagination: false,
    pauseOnHover: false,
    pauseOnFocus: false,
    autoScroll: { speed: 2 }
  }).mount( window.splide.Extensions );
  
  new Splide(".splide-locations", {
    type: 'loop',
    height: '360px',
    focus: 0,
    perPage: 3,
    perMove: 1,
    padding: '5em',
    gap: '15px',
    breakpoints: {
      1280: { perPage: 2 },
      1024: { height: '300px' },
      768: { perPage: 1 },
    },
  }).mount();   

  new Splide(".splide-opinions", {
    type: 'slide',
    autoHeight: true,
    focus: 0,
    perPage: 2,
    perMove: 1,
    padding: '10em',
    gap: '20px',
    breakpoints: {
      1024: { perPage: 1 },
    },
  }).mount();   
</script>
    
