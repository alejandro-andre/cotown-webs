<section class="first-contain pure-u-1">

  <!-- Photo carousel -->
  <section id="image-carousel" class="splide first-slider pure-u-1" aria-label="Beautiful Images">
    <div class="splide__track">
      <ul class="splide__list">
        {% for i in building.Photos %}
        <li class="splide__slide">
          {% image
            constants.SERVER + "/wopi/files/Marketing/Media_building/" + i.id +"/Image/contents?access_token=" + token,
            i.Name, i.Name|slug, "",
            [1200], ""
          %}
        </li>
        {% endfor %}
      </ul>
    </div>
  </section>

  <!-- Name -->
  <div class="text-first pure-u-11-12 pure-u-lg-4-5">
    {{building|translate('Description', L)|markdown|safe}}
  </div>
     
  <section class="flat-services pure-u-23-24">

    <!-- Services -->
    <div id="splideServices" class="splide splide-services" role="group">
      <div class="splide__track">
        <ul class="splide__list">

          {% for s in services %}
          <li class="splide__slide">
            <div class="slide">
              <div class="img">
                {% svg 
                   constants.SERVER + "/wopi/files/Marketing/Media_service_type/" + s.Icons[0].id +"/Icon/contents?access_token=" + token,
                   s.Name
                %}
              </div>
            <p class="title">{{s | translate('Name', L)}}</p>
            </div>           
          </li>
          {% endfor %}

        </ul>
      </div>
    </div>

