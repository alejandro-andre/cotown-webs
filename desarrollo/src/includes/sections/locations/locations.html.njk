 <section class="all-locations">

  <div class="texto-container">
    <h1 class="title-where">
      {% literal texts, 'home-localizaciones-titulo', L %}
    </h1>
  </div>

  {% for l in locations %}
  <div class="location pure-u-1">
    <a href="{{langs[L].folder}}/{{l | translate('Name', L) | ascii}}.html" class="pure-u-1 pure-u-lg-1-3">
    <div class="img pure-u-1">
    {% image 
       constants.SERVER + "/wopi/files/Marketing/Media_location/" + l.Image[0].id +"/Image/contents?access_token=" + token, 
       l.Name, l.Name|slug, "img-loc",
       [800], ""
    %}
    </div>
    </a>
    <div class="text-content pure-u-1 pure-u-lg-2-3">
      <a href="{{langs[L].folder}}/{{l | translate('Name', L) | ascii}}.html">
        <h2 class="lotation-title">{{l | translate('Name', L)}}</h2>
      </a>
      <p class="body1">{{l | translate('Description', L)}}</p>
    </div>        
  </div>        
  {% endfor %}
    
</section>
