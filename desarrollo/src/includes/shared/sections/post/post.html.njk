<!-- Main -->
<main class="post">
  <div class="container-main">

    <section class="post-content pure-u-20-24">
      <div class="h1-container pure-u-20-24">
        <h1>{{post | translate('Title', L)}}</h1>
      </div>
      {% image
        constants.SERVER + "/wopi/files/Marketing/Post/" + post.id +"/Image/contents?access_token=" + token,
        post.Title, post.Title, "img-loc",
        [800], ""
      %}
      <div class="text pure-u-18-24">
        <strong>{{post.Publish_date|dmy}}</strong>
        {% for t in p.Tags %}
        <p>{{t.Tag | translate('Name', L)}}</p>
        {% endfor %}
        <p>{{post | translate('Content', L) | markdown | safe }}</p>
      </div>      
    </section>

    <section class="like-content pure-u-1">
      <div class="like pure-u-1 pure-u-lg-7-12">

        <div class="text pure-u-22-24 pure-u-lg-15-24">
          <h3>{% literal texts, 'post-te-ha-gustado', L %}</h3>
          <p>{% literal texts, 'post-comparte', L %}</p>
        </div>

        <!-- TODO: link para compartir, no a la RRSS -->
        <div class="redes pure-u-22-24 pure-u-lg-7-24">
          <a href="whatsapp://send?text={{page.url}}" rel="noopener, noreferrer" target="_blank"><em class="icon-whatsapp-primary"></em></a>
          <a href="https://www.facebook.com/sharer/sharer.php?u=#{{page.url}}" rel="noopener, noreferrer" target="_blank"><em class="icon-facebook-primary"></em></a>
          <a href="https://www.instagram.com/?url={{page.url}}" rel="noopener, noreferrer" target="_blank"><em class="icon-instagram-primary"></em></a>
          <a href="https://www.tiktok.com/share?url={{page.url}}" rel="noopener, noreferrer" target="_blank"><em class="icon-tiktok-primary"></em></a>
        </div>

      </div>   
    </section>

  </div>
</main>
