<section class="opinions">

<div class="text-container">
    {% literal texts, 'home-testimonios-titulo', L, true %}
    <!--$$
    <h2 class="title">QUE DICEN DE NOSOTROS</h2>
    <h2 class="title turquoise">NUESTROS </h2>
    -->
</div>

<div class="carousel-opinions">
    <div class="swiffy-slider slider-item-show3 slider-item-show2-sm slider-item-reveal slider-item-nosnap-touch slider-nav-visible slider-indicators-round slider-indicators-outside slider-nav-animation slider-item-first-visible slider-item-snapstart slider-item-ratio-1x1">
        <ul class="slider-container">
            {% for t in testimonials %}
            <li class="slide-visible">
                <div class="card h-100">
                    <div class="card-container">
                        <div class="avatar">
                        {% image 
                        constants.SERVER + "/wopi/files/Marketing/Testimonials/" + t.id +"/Image/contents?access_token=" + token, 
                        t.Name, t.Name|slug, "img",
                        [100], ""
                        %}
                        </div>
                        <div class="opinion">
                        <div class="title-info">
                            <p class="name bold">{{t.Name}}</p>
                            <p class="date">{{t.Date}}</p>
                        </div>
                        <h3 class="comillas">â€œ</h3>
                        <ul class="stars">
                            {% for i in range(0, t.Stars) %}
                            <li class="star"><em class="icon-star"></em></li>
                            {% endfor %}
                            {% for i in range(t.Stars, 5) %}
                            <li class="star"><em class="icon-star no-active"></em></li>
                            {% endfor %}
                        </ul>
                        </div>
                        <p class="text">
                        {{t | translate ('Text', L)}}
                        </p>
                    </div>
                </div>                
            </li>
            {% endfor %}
        </ul>

        <button type="button" class="slider-nav"></button>
        <button type="button" class="slider-nav slider-nav-next"></button>
        <ul class="slider-indicators">
            {% for t in testimonials %}
            <li class="dot{% if loop.index==1 %} active{% endif %}"></li>
            {% endfor %}
        </ul>

    </div>
</div>

</section>