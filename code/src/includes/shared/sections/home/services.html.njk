
<section class="servicios
{% if site == 'vanguard' %}
vanguard
{% else %}
cotown
{% endif %}">

  <div class="text-container">
    <h2 class="head2 title">{% literal texts, 'home-servicios-titulo', L %}</h2>
    <p class="subtitle">{% literal texts, 'home-servicios-texto', L %}</p>
  </div>

  <div class="servicios-container">
    <div class="services-cards">

      {% for s in services %}
      <div class="card">
        {% svg
           constants.SERVER + "/wopi/files/Marketing/Media_service_type/" + s.Icons[0].id +"/Icon/contents?access_token=" + token,
           s.Name
        %}
        <h3 class="bold">{{s | translate('Name', L)}}</h3>
        <p class="text">{{s | translate('Description', L)}}</p>
      </div>
      {% endfor %}

    </div>
  </div>

</section>

