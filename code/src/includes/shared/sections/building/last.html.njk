<anchor class="anchor" id="barrio"></anchor> 
<section class="last-content pure-u-11-12 pure-u-lg-22-24">

  <div class="pure-u-1">
    <h2>{% literal texts, 'rooms-bienvenido', L %} <span>{{building.District.Name}}</span></h2>
  </div>

  <div class="left pure-u-1 pure-u-lg-7-12">
    <div class="text pure-u-23-24">
      {{ building.District | translate('Description', L) | markdown | safe }}
    </div>
  </div>

  <div class="right pure-u-1 pure-u-lg-5-12">
    <div class="pure-u-1">

      <section id="main-gallery" class="splide rooms-carousel" aria-label="Gallery">
        <div class="splide__track">
          <ul class="splide__list">
            {% for f in building.District.Photos %}
            <li class="splide__slide">
              {% image
                constants.SERVER + "/wopi/files/Marketing/Media_district/" + f.id +"/Image/contents?access_token=" + token,
                f.Name, f.Name + '-' + f.id | slugify, "",
                [800], ""
              %}
            </li>
            {% endfor %}
          </ul>
        </div>
      </section>

      <section id="thumbnail-gallery" class="splide" aria-label="Thumbnails">
        <div class="splide__track">
          <ul class="splide__list">
            {% for f in building.District.Photos %}
            <li class="splide__slide">
              {% image
                constants.SERVER + "/wopi/files/Marketing/Media_district/" + f.id +"/Image/contents?access_token=" + token,
                f.Name, f.Name + '-' + f.id | slugify, "",
                [500], ""
              %}
            </li>
            {% endfor %}
          </ul>
        </div>
      </section>

    </div>
  </div>

</section>