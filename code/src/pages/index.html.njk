{% block footer %}
{% set script %}
// Sliders
new Splide('.splide-partners', {
  type: 'loop',
  fixedWidth: '240px',
  focus: 0,
  perMove: 1,
  drag: 'free',
  arrows: false,
  pagination: false,
  pauseOnHover: false,
  pauseOnFocus: false,
  autoScroll: { speed: 2 }
}).mount( window.splide.Extensions );

new Splide(".splide-locations", {
  type: 'loop',
  height: '360px',
  focus: 0,
  perPage: 3,
  perMove: 1,
  padding: '5em',
  gap: '15px',
  breakpoints: {
    1280: { perPage: 2 },
    1024: { padding: '3em', height: '300px' },
    768: { perPage: 1 },
  },
}).mount();

new Splide(".splide-opinions", {
  type: 'slide',
  focus: 0,
  height: 340,
  perPage: 3,
  perMove: 1,
  padding: '10em',
  gap: '20px',
  breakpoints: {
    1600: { perPage: 2 },
    1024: { perPage: 1 },
    768: { padding: 0 },
  },
}).mount();
{% endset %}<script>{{ script | jsmin | safe }}</script>
<script src="https://static.elfsight.com/platform/platform.js" data-use-service-core defer></script>
{% endblock %}
