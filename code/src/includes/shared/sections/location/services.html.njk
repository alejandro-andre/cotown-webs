<section class="necesities {% if site == 'vanguard' %} vanguard {% else %} cotown {% endif %}">
  <div class="contain pure-u-1 {% if site == 'vanguard' %} pure-u-lg-5-6 pure-g {% else %} pure-u-lg-1 {% endif %}">

    <div class="title pure-u-1 pure-u-lg-1-2">
      <h2>{% literal texts, 'location-servicios-titulo', L %}</h2>
    </div>

    <div class="text pure-u-1 pure-u-lg-1-2">
      &nbsp; 
    </div>

    <div class="grid pure-u-1 pure-g">

      {% for s in services %}
      <div class="necesidad pure-u-1 pure-u-lg-11-24">
        <div class="img pure-u-1-3">
        {% svg
           constants.SERVER + "/wopi/files/Marketing/Media_service_type/" + s.Icons[0].id +"/Icon/contents?access_token=" + token,
           s.Name
        %}
        </div>
        <div class="p-title pure-u-11-12">
          <p>{{s | translate('Name', L)}}</p>
        </div>
        <div class="p-text pure-u-23-24">
          <p>{{s | translate('Description', L)}}</p>
        </div>
      </div>
      {% endfor %}
  </div>
 
</section>

{% if site == 'vanguard' %}
<section class="banner-residences pure-u-1">

  <div class="contain pure-u-1">

    <div class="title pure-u-1">
      <h2>{% literal texts, 'residence-descubre', L %}</h2>
    </div>

    <div class="text pure-u-1">
      <p>{% literal texts, 'residence-explora', L %}</p>
    </div>

    <div class="booking pure-u-1">
      <button class="btn-secondary" onclick="location.href='{{root}}{{langs[L].folder}}/{{langs[L].pages.residences.url}}.html'">
        {% literal texts, 'residence-encuenta', L %}
        <em class="icon-house"></em>
      </button>
    </div>
    
  </div>

</section>
{% endif %}