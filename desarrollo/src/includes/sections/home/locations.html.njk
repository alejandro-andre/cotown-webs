<section class="locations">

  <div class="text-container">
    <h2 class="h2-where">{% literal texts, 'home-donde-quieres-vivir-title', L %}</h2>
  </div>

  <div class="carousel splide" role="group" aria-label="Splide Basic HTML Example">
    <div class="splide__track">
      <ul class="splide__list">
        {% for l in locations %}
        <li class="splide__slide">
          <a href="{{langs[L].folder}}/{{l | translate('Name', L) | ascii}}.html">
          <div class="img">
            {% image 
              constants.SERVER + "/wopi/files/Marketing/Media_location/" + l.Image[0].id +"/Image/contents?access_token=" + token, 
              l.Name, l.Name|slug, "",
              [800], ""
            %}
            <h3 class="img-title">{{l.Name}}</h3>
          </div>
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <script>
      var splide = new Splide(".splide", {
        type: 'loop',
        height: '360px',
        perPage: 3,
        perMove: 1,
        padding: '5em',
        gap: '15px',
        breakpoints: {
          1280: { perPage: 2 },
          1024: { height: '300px' },
          768: { perPage: 1 },
        },
      });
      splide.mount();
      </script>
    
  </section>
    
</section>
