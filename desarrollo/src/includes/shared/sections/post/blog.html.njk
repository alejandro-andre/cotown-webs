<!-- Additional HEAD content -->
{% block head %}
<link rel="stylesheet" href="/assets/css/blog.css">
{% endblock %}

<!-- Main -->
<main class="blog">
  <div class="container-main pure-u-20-24">

    <!-- Cabecera -->
    <section class="first-contain pure-u-1">
        <div class="title-big pure-u-1">           
          <h1 class="h2-big">BLOG</h1>
        </div>
        <div class="search pure-u-22-24">
          <form class="search-form pure-u-1">

            <!-- Filter -->
            <select id="category" class="pure-u-7-24" onchange="goTag()">
              <option value="">{% literal texts, 'filtrar-categoria', L %}</option>
              {% for t in tags %}
              <option value="{{t | translate('Name', L)|ascii}}">{{t | translate('Name', L)}}</option>
              {% endfor %}
            </select>

            <!-- Search -->
            <div class="search-container pure-u-1 pure-u-lg-2-3">
              <label class="selected-option pure-u-22-24" for="options">
                  <em class="icon-search"></em>
                  <input
                  type="search" 
                  class="sinBorde"           
                  name=""
                  placeholder="Buscar por palabra..."/>                 
              </label>            
            </div>      
                         
          </form>
        </div>
    </section>

    <!-- Posts -->
    <section class="posts pure-u-23-24 pure-g">
        {% for p in posts %}
        {% if tag.id | includes(p.Tags, 'Tag') %}
        <div class="post pure-u-1 pure-u-md-11-24 pure-u-lg-7-24 ">
          <a href="{{langs[L].folder}}/{{p | translate('Slug', L) | ascii}}.html">
            <div class="img-container">
              <div class="mark-content">
                {% if p.featured %}
                <div class="mark">
                  <div class="stars-container">
                    <em class="icon-star"></em>
                    <em class="icon-star"></em>
                    <em class="icon-star"></em>
                  </div>                         
                </div>
                {% endif %}
              </div>
              {% image
                constants.SERVER + "/wopi/files/Marketing/Post/" + p.id +"/Image/contents?access_token=" + token,
                p.Title, p.Slug|slug, "",
                [600,300], "(max-width: 768px) 200px, (max-width: 1024px) 300px, 600px"
              %}
              <div class="date">
                <p>{{p.Publish_date|dmy}}</p>
              </div>
            </div>  
            <div class="data-post pure-u-23-24">             
              <h3 class="pure-u-22-24">{{p | translate('Title', L)}}</h3>
              {% for t in p.Tags %}
              <p>{{t.Tag | translate('Name', L)}}</p>
              {% endfor %}               
            </div>
            </a>
        </div>      
        {% endif %}            
        {% endfor %}            
    </section>

  </div>
</main>

{% block footer %}
<script>
function goTag(event) {
  const select = document.getElementById("category");
  document.location.href="{{langs[L].folder}}/blog/" + select.value + ".html"
}
</script>
{% endblock %}
