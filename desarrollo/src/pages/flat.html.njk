---
name: flat
eleventyComputed:
    title: "{{langs[L].pages[name].title}}"
    alt:
      es: "{{langs.es.folder}}/{{langs.es.pages[name].url}}.html"
      en: "{{langs.en.folder}}/{{langs.en.pages[name].url}}.html"
    description: "{{langs[L].pages[name].description}}"
    permalink: "{{langs[L].folder}}/{{langs[L].pages[name].url}}.html"
layout: layouts/base.html
pagination:
    data: langs
    size: 1
    alias: L
    addAllPagesToCollections: true   

date: Last Modified
changefreq: "weekly"
priority: "1.0"
tags: page
---
<!-- Additional HEAD content -->
{% block head %}
<link rel="stylesheet" href="/assets/css/flat.css">
{% endblock %}

<!-- Main -->
<main class="flat">
  <div class="container-main pure-u-1">

    <!-- main -->
    <section class="first">
    {% include 'sections/flat/first.html.njk' %}    
    </section>
    <section class="rooms">
    {% include 'sections/flat/rooms.html.njk' %}
    </section>
   
    
    <!-- services -->
    <section class="map-services">
      <div id="splideServices" class="carousel splide splide-services" role="group">
        <div class="splide__track">
          <ul class="splide__list">

            {% for s in services %}
            <li class="splide__slide">
              <div class="slide">
                <div class="img">
                  {% image 
                      constants.SERVER + "/wopi/files/Building/Building_service_type/" + s.id +"/Icon/contents?access_token=" + token, 
                      s.Name, s.Name|slug, "",
                      [100], ""
                  %}
                </div>
              <h3 class="title">{{s | translate('Name', L)}}</h3>
              <p class="text">{{s | translate('Description', L)}}</p>
              </div>            
            </li>
            {% endfor %}

          </ul>
        </div>
      </div>
    </section>
   

  </div>
</main>


<script>
new Splide( '#image-carousel', {
  type  : 'fade',
  rewind: true,
} );
splide.mount();
</script>


<script>
 new Splide( '#main-slider', {
  type       : 'fade',
  heightRatio: 0.5,
  pagination : false,
  arrows     : false,
  cover      : true,
} );

new Splide( '#thumbnail-slider', {
  rewind          : true,
  fixedWidth      : 104,
  fixedHeight     : 58,
  isNavigation    : true,
  gap             : 10,
  focus           : 'center',
  pagination      : false,
  cover           : true,
  dragMinThreshold: {
    mouse: 4,
    touch: 10,
  },
  breakpoints : {
    640: {
      fixedWidth  : 66,
      fixedHeight : 38,
    },
  },
} );

main.sync( thumbnails );
main.mount();
thumbnails.mount();
</script>


<script>
  new Splide("#splideServices", {
    type: 'loop',
    autoHeight: true,
    focus: 0,
    perPage: 8,
    perMove: 1,
    gap: '1em',
    breakpoints: {
      1024: { perPage: 4 },
      768: { perPage: 2, padding: 0.5em },
    },
  }).mount();   
</script>