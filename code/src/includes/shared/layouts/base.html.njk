<!DOCTYPE html>
<html lang="{{L}}">

<!-- Head -->
<head>
{% include 'shared/sections/common/head.html.njk' %}
<link rel="stylesheet" href="/assets/css/global.css">
{% block head %}{% endblock %}
</head>

<!-- Body -->
<body>

<!-- Header -->
{% include 'shared/sections/common/header.html.njk' %}

<!-- Content -->
{{ content | safe }}

<!-- Icono spotify -->
 {% if site == 'vanguard' %}
<section class="iconos-chat">
  {% for r in rrss | find('Name', 'eq', 'spotify') %}
  <a href="{{r.Link}}" rel="noreferrer" target="_blank">
  <div class="spotify"><em class="icon-spotify"></em></div>
  </a>
  {% endfor %}
</section>
{% else %}
<section class="iconos-chat cotown">
  {% for r in rrss | find('Name', 'eq', 'spotify') %}
  <a href="{{r.Link}}" rel="noreferrer" target="_blank">
  <div class="spotify"><em class="icon-spotify"></em></div>
  </a>
  {% endfor %}
</section>
{% endif %}


<!-- Spinner -->
<div id="overlay"><div id="spinner"></div></div>

<!-- Footer -->
{% include 'shared/sections/common/footer.html.njk' %}
{% block footer %}{% endblock %}

</body>

</html>