<section class="servicios">

  <div class="text-container">
    <h2 class="title twelve columns">{% literal texts, 'home-servicios-titulo', L %}</h2>
    <p class="subtitle twelve columns">{% literal texts, 'home-servicios-texto', L %}</p>
  </div>

  <div class="servicios-container twelve columns">
    <div class="services-cards">

      {% for s in services %}
      <div class="card">
        {% image 
            constants.SERVER + "/wopi/files/Building/Building_service_type/" + s.id +"/Icon/contents?access_token=" + token, 
            s.Name, s.Name|slug, "",
            [100], ""
        %}
        <p class="bold">{{s | translate('Name', L)}}</p>
        <p class="text">{{s | translate('Description', L)}}</p>
      </div>
      {% endfor %}

    </div>
  </div>

</section>