<header>

<!-- Header
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<section class="container-header first pure-g">
  <div class="turquoise-line pure-u-1-2 pure-u-lg-1">

    <!-- Banner
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <div class="left-content pure-1-2">
      {% for b in banners %}
      {% if loop.index == 1 %}
      <div class="spot">{{b | translate('Text', L)}}</div>
        <a href="{{b.Link}}"><button class="btn-primary">{% literal texts, 'header-descubrir', L %}</button></a>
      {% endif %}
      {% endfor %}
    </div>
      
    <!-- Cabecera
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <div class="right-content pure-1-2">
      <div class="pure-menu pure-menu-horizontal">
        <ul class="pure-menu-list">

          <li class="icons-header pure-menu-item">
            <!-- Buscador -->
            <a href="#" class="pure-menu-link"><em class="icon-search"></em></a>
            <!-- Whatsapp -->
            <a href="{{globals.rrss.wh}}" class="pure-menu-link"><em class="icon-whatsapp-primary"></em></a>
          </li>

          <!-- Idiomas -->
          <li class="lang pure-menu-item">
            <div class="select-container">
              {% if L == 'es' %}
              <label class="selected-option" for="options">
                <em class="icon-corchete-down"></em>
                <span class="select-value">Español (ES)</span>
              </label>
              <div data-toggle="collapsed" class="options">
                <a href="{{alt.en}}"><div class="option">English (UK)</div></a>
              </div>
              {% else%}
              <label class="selected-option" for="options">
                <em class="icon-corchete-down"></em>
                <span class="select-value">English (EN)</span>
              </label>
              <div data-toggle="collapsed" class="options">
                <a href ="{{alt.es}}"><div class="option">Español (ES)</div></a>
              </div>
              {% endif %}
            </div>
          </li>

          <!-- Area privada -->
          <li class="pure-menu-item private-container">
            <button class="private">
              <em class="icon-log-in"></em>
              <p class="private-area">{% literal texts, 'header-area-privada', L %}</p>
            </button>
          </li>

          <!-- Reservar -->
          <li class="pure-menu-item">
            <div class="booking">
              <button class="btn-primary">{% literal texts, 'header-reservar', L %}</button></button>
            </div>
          </li>

        </ul>
      </div>
    </div>

  </div>
</section>

<!-- Menu
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<section class="container-header second pure-g">
  <div class="black-line custom-wrapper pure-g" id="blackMenu">
    <div class="left-nav pure-u-7-8 pure-u-lg-6-24">

      <!-- Reservar (movil) -->
      <div class="booking pure-u-1-3">
        <button class="btn-secondary">{% literal texts, 'header-reservar', L %}</button>
      </div>

      <!-- Logo -->
      <div class="logo pure-u-1-3">
        <a href="{{langs[L].folder}}/">
          <h1><span class="turquoise">C</span>OTOWN<span class="turquoise">.</span></h1>
        </a>
      </div>

      <!-- Idioma (movil) -->
      <div class="lang pure-u-1-3">
        <img class="lang-img" alt="es de ser Cotowner" src="/assets/img/es.png"></img>
      </div>
      <a href="#" class="custom-toggle" id="menuToggle"><em class="icon-Piso"></em></a>
    </div>

    <div class="right-nav pure-u-1-1 pure-u-lg-18-24 pure-menu pure-menu-horizontal custom-can-transform">

      <!-- Menu -->
      <ul class="black-menu pure-menu-list">

        <!-- Locations -->
        <li class="locations-dropdown pure-menu-item">
          <div class="locations-container">
            <label class="locations-label">
                <span class="loc"><a href="{{langs[L].folder}}/{{langs[L].pages['locations'].url}}.html">{{langs[L].pages['locations'].title}}</a></span>
                <em class="change-value icon icon-corchete-down" for="options"></em>
            </label>
            <div data-toggle="close" class="options-loc">
                {% for l in locations %}
                <div class="option-loc"><a href="{{langs[L].folder}}/{{l | translate('Name', L) | ascii}}.html">{{l | translate('Name', L)}}</a></div>
                {% endfor %}
            </div>
          </div>
        </li>

        <!-- About -->
        <li class="about"><a href="{{langs[L].folder}}/{{langs[L].pages['about'].url}}.html">{{langs[L].pages['about'].title}}</a></li>

        <!-- Advantages -->
        <li class="advantages"><a href="{{langs[L].folder}}/{{langs[L].pages['advantages'].url}}.html">{{langs[L].pages['advantages'].title}}</a></li>

        <!-- Faqs -->
        <li class="faqs"><a href="{{langs[L].folder}}/{{langs[L].pages['faqs'].url}}.html">{{langs[L].pages['faqs'].title}}</a></li>

        <!-- Blog -->
        <li class="blog"><a href="{{langs[L].folder}}/{{langs[L].pages['blog'].url}}.html">{{langs[L].pages['blog'].title}}</a></li>

        <!-- Contact -->
        <li class="contact"><a href="{{langs[L].folder}}/{{langs[L].pages['contact'].url}}.html">{{langs[L].pages['contact'].title}}</a></li>

      </ul>

    </div>
  </div>      
</section>

</header>