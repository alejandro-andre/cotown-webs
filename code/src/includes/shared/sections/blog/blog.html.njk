<!-- Additional HEAD content -->
{% block head %}
{% set css %}{% include "shared/css/blog.css" %}{% endset %}<style>{{ css | cssmin | safe }}</style>
{% endblock %}

<!-- Main -->
<main class="blog">
  <div class="container-main">

      <!-- Cabecera -->
    <section class="first-contain pure-u-1">

        <div class="h1-big">
          <h1>BLOG</h1>
        </div>

        <div class="search pure-u-23-24">
          <form class="search-form">

            <!-- Filter -->
            <select id="category" class="pure-u-1-3" onchange="goTag()">
              <option value="" disabled selected>{% literal texts, 'filtrar-categoria', L %}</option>
              <option value="">{% literal texts, 'filtrar-todas', L %}</option>
              {% for t in posttags %}
              <option value="{{t | translate('Name', L)|ascii}}">{{t | translate('Name', L)}}</option>
              {% endfor %}
            </select>

            <!-- Search -->
            <!-- TODO - Buscador
            <div class="search-container pure-u-1 pure-u-lg-15-24">
              <label class="selected-option" for="options">
                  <em class="icon-search"></em>
                  <input
                  type="search"
                  class="sinBorde"
                  name=""
                  placeholder="Buscar por palabra..."/>
              </label>
            </div>
            -->
            
          </form>
        </div>

    </section>

    <!-- Posts -->
    <section class="posts pure-u-1">

      {% for p in posts %}
      {% if posttag.id | includes(p.Tags, 'Tag') %}
      <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-8-24">
        <div style="padding:0;margin:5px;">
          <div class="post">
            <a href="{{langs[L].folder}}/{{p | translate('Slug', L) | ascii}}.html">
            <div class="img-container">
              {% if p.Featured %}
              <div class="mark-content">
                <div class="mark">
                  <div class="stars-container">
                    <em class="icon-star"></em>
                    <em class="icon-star"></em>
                    <em class="icon-star"></em>
                  </div>
                </div>
              </div>
              {% endif %}
              {% image
                constants.SERVER + "/wopi/files/Marketing/Post/" + p.id +"/Image/contents?access_token=" + token,
                p.Title, p.Slug|slug, "",
                [600,300], "(max-width: 768px) 200px, (max-width: 1024px) 300px, 600px"
              %}
              <div class="date">
                <p>{{p.Publish_date|dmy}}</p>
              </div>
            </div>
            <div class="data-post {% if p.Featured %}primary {% endif %}pure-u-23-24">
              <h1 class="pure-u-22-24">{{p | translate('Title', L)}}</h1>
              <div class="p-container">
              {% for t in p.Tags %}
              <p>{{t.Tag | translate('Name', L)}}</p>
              {% endfor %}
              </div>
            </div>
            {% if p.featured %}
            <div class="data-post primary pure-u-23-24">
              <h1 class="pure-u-22-24">{{p | translate('Title', L)}}</h1>
              <div class="p-container">
              {% for t in p.Tags %}
              <p>{{t.Tag | translate('Name', L)}}</p>
              {% endfor %}
              </div>
            </div>
            {% endif %}
            </a>
          </div>
        </div>
      </div>
      {% endif %}
      {% endfor %}

      <!-- Pagination -->
      <!-- TODO - PaginaciÃ³n
      <div class="pag pure-u-23-24">
        <ul class="pagination">
          <li><a class="arrow disable" ref="#">
            <em class="icon-corchete-left"></em>
          </a></li>
          <li><a href="#" class="active">1</a></li>
          <li><a ref="#">2</a></li>
          <li><a ref="#">3</a></li>
          <li><a class="more">...</a></li>
          <li><a ref="#">10</a></li>
          <li><a class="arrow"ref="#">
            <em class="icon-corchete-right"></em>
          </a></li>
        </ul>
      </div>
      -->

    </section>

  </div>
</main>

{% block footer %}
{% set script %}
function goTag(event) {
  const select = document.getElementById("category");
  var url = "{{langs[L].folder}}/blog";
  if (select.value != '') 
    url = url  + "/" + select.value;
  document.location.href=url + ".html";
}
{% endset %}<script>{{ script | jsmin | safe }}</script>
{% endblock %}
